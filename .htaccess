AddCharset UTF-8 .html .js .css .txt .xml

# Headers
# sudo a2enmod negociation
<IfModule mod_negociation.c>
DefaultLanguage	fr
</IfModule>

# Headers
# sudo a2enmod headers
<IfModule mod_headers.c>
Header always append X-Frame-Options DENY
</IfModule>

# Performances
# sudo a2enmod expires
<IfModule mod_expires.c>
ExpiresActive On
ExpiresByType text/html "modified plus 1 week"
ExpiresByType image/* "access plus 1 month"
ExpiresByType text/css "access plus 1 month"
ExpiresByType text/javascript "access plus 1 month"
ExpiresByType application/javascript "access plus 1 month"
ExpiresByType application/x-javascript "access plus 1 month"
ExpiresDefault "access plus 1 week"
FileEtag MTime Size
</IfModule>

# Compression
# sudo a2enmod deflate
<IfModule mod_deflate.c>
AddOutputFilterByType DEFLATE text/plain text/css text/javascript application/javascript application/x-javascript text/xml text/html
</IfModule>

# Feeds
# sudo a2enmod rewrite
<IfModule mod_rewrite.c>
Options +FollowSymlinks
RewriteEngine On

#General Feed
RewriteRule	^feeds/posts$		- [R=204,L]

#Calendar
RewriteRule ^events$			https://www.google.com/calendar/embed?src=cyneticmonkey.com_57i9ip5bcq9jq8crnqa6ruupko@group.calendar.google.com [R=302,L]
RewriteRule ^events/feed$	https://www.google.com/calendar/feeds/cyneticmonkey.com_57i9ip5bcq9jq8crnqa6ruupko@group.calendar.google.com/public/basic?orderby=starttime&sortorder=a	[R=302,L]
</IfModule>
